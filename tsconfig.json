{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "outDir": "build",
        "strictNullChecks": true,
        "noImplicitAny": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
